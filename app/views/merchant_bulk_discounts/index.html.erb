<h1>Bulk Discounts at <%= @merchant.name %></h1>

<h3><%= link_to "Create New Discount", "/merchants/#{@merchant.id}/bulk_discounts/new", method: :get, local: true %></h3>

<ul>
  <% @merchant.bulk_discounts.each do |bd| %>
    <li id=<%= bd.id %>><strong>Percent Discount: </strong><%= bd.percent_discount %>
    <br>
    <strong>Quantity Threshold: </strong><%= bd.quantity_threshold %>
    <br>
    <%= link_to "View This Discount", "/merchants/#{@merchant.id}/bulk_discounts/#{bd.id}", method: :get, local: true %>
    <br>
    <%= link_to "Delete This Discount", "/merchants/#{@merchant.id}/bulk_discounts/#{bd.id}?merchant_id=#{@merchant.id}", method: :delete, local: true %>
    </li>
    <br>
  <% end %>
</ul>
